# Environment Configuration Example
# Copy this file to .env and update values for your environment

# Application
APP_NAME=ENVOYOU SEC API
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_MIN_SCORE=0.5
SKIP_RECAPTCHA=false

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/envoyou_sec
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE_SECONDS=3600

# EPA API Configuration
EPA_API_BASE_URL=https://api.epa.gov
EPA_API_KEY=your-epa-api-key-if-required
EPA_DATA_CACHE_HOURS=24
EPA_REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
LOG_LEVEL=INFO

# File Storage
UPLOAD_MAX_SIZE_MB=50
REPORT_STORAGE_PATH=./storage/reports
